# SmartMatch PWA Environment Variables
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================

# Supabase Project URL
# Get this from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
SUPABASE_URL=your_supabase_project_url

# Supabase Anonymous Key (public)
# Safe to expose in frontend code
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Supabase Service Role Key (private)
# Keep this secret! Used for server-side operations
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
SUPABASE_SERVICE_KEY=your_supabase_service_role_key

# =============================================================================
# AI & API CONFIGURATION
# =============================================================================

# OpenRouter API Key
# Get this from https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key

# Google Custom Search Engine (CSE) API Key
# Get this from Google Cloud Console
CUSTOM_SEARCH_API_KEY=your_google_cse_api_key

# Google Custom Search Engine ID
SEARCH_ENGINE_ID=your_google_cse_id

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application URL (for API callbacks and redirects)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Environment (development, staging, production)
NODE_ENV=development

# Enable debug logging
DEBUG=false

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# JWT Secret for session management
# Generate a secure random string for production
JWT_SECRET=your_jwt_secret_here

# API Rate Limiting (requests per minute)
API_RATE_LIMIT=100

# Session timeout (in seconds)
SESSION_TIMEOUT=3600

# =============================================================================
# DATA PIPELINE SETTINGS
# =============================================================================

# Pipeline metrics endpoint (optional)
PIPELINE_METRICS_URL=

# Backup retention days
BACKUP_RETENTION_DAYS=30

# Data sync interval (in minutes)
SYNC_INTERVAL=60

# Safe sync mode - prevents database deletions during sync (recommended for testing)
SAFE_SYNC_MODE=false

# Allow committing generated data to repository (default: false to prevent data leaks)
ALLOW_COMMIT_DATA=false

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable mock data for development
MOCK_DATA=false

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable detailed error reporting in development
DETAILED_ERRORS=true

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Cache TTL for phone data (in seconds)
CACHE_TTL=3600

# Maximum phones to process in batch
MAX_BATCH_SIZE=10

# Request timeout (in milliseconds)
REQUEST_TIMEOUT=30000

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable adaptive learning
ENABLE_ADAPTIVE_LEARNING=true

# Enable real-time updates
ENABLE_REALTIME=true

# Enable advanced analytics
ENABLE_ANALYTICS=false

# Enable experimental features
ENABLE_EXPERIMENTAL=false

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================

# Price tracking API (optional)
PRICE_API_KEY=

# Analytics service (optional)
ANALYTICS_ID=

# Error monitoring (optional)
ERROR_MONITORING_DSN=

# =============================================================================
# LOCAL DEVELOPMENT
# =============================================================================

# Supabase local development URL
SUPABASE_LOCAL_URL=http://localhost:54321

# Enable local Supabase development
SUPABASE_LOCAL=true

# Local data directory
LOCAL_DATA_DIR=./data

# =============================================================================
# PRODUCTION DEPLOYMENT
# =============================================================================

# Vercel URL (automatically set by Vercel)
VERCEL_URL=

# Database connection pool size
DB_POOL_SIZE=10

# Enable database query logging
DB_LOG_QUERIES=false

# =============================================================================
# SECURITY NOTES
# =============================================================================

# IMPORTANT SECURITY REMINDERS:
#
# 1. Never commit .env.local to version control
# 2. Use strong, unique passwords for all API keys
# 3. Rotate API keys regularly
# 4. Use different keys for development and production
# 5. Monitor API usage and set up alerts for unusual activity
# 6. Enable 2FA on all accounts that provide API keys
# 7. Use environment-specific values (don't reuse production keys in dev)
#
# CRITICAL: The following keys should NEVER be exposed:
# - SUPABASE_SERVICE_ROLE_KEY
# - OPENROUTER_API_KEY
# - CUSTOM_SEARCH_API_KEY
# - JWT_SECRET
#
# =============================================================================
